@model FilmZone.ViewModels.MovieDetailsViewModel

@{
    ViewData["Title"] = Model.Title;
    var userId = User.Identity.IsAuthenticated ? User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value : null;
}

<div class="card text-white bg-dark mb-3 rounded-4 mt-5 overflow-hidden ">
    <div class="card-body ms-3 p-0">
        <div class="d-flex flex-wrap">
            <div class="col-md-8">
                <div>
                    <div class="d-flex align-items-center mt-3">
                        <h1 class="text-primary fw-bolder mb-0 me-3">@Model.Title</h1>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Rating Form -->
                            <form id="ratingForm" method="post" asp-action="AddRating" asp-controller="Movies" class="mb-0">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="MovieId" value="@Model.Id" />
                                <input type="hidden" name="UserId" value="@userId" />
                                <input type="hidden" name="Rating" id="ratingInput" />

                                <div class="text-warning fs-3" id="rating-stars">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="bi bi-star" data-value="@i" style="cursor:pointer;"></i>
                                    }
                                </div>
                            </form>
                        }
                        else
                        {
                            <!-- Static Stars for Guests -->
                            <div class="text-warning fs-3">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= (int)@Model.Rating)
                                    {
                                        <i class="bi bi-star-fill"></i>
                                    }
                                    else if (i == (int)@Model.Rating + 1 && @Model.Rating % 1 >= 0.5)
                                    {
                                        <i class="bi bi-star-half"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star"></i>
                                    }
                                }
                            </div>
                        }
                    </div>

                    <a asp-action="Index" asp-controller="Home" asp-route-id="@Model.CategoryId"
                       class="badge rounded-pill bg-dark-subtle fs-6 text-info-emphasis text-decoration-none neon-hover">@Model.Category</a>

                    <p class="fs-5 text-light-emphasis mt-3 ">@Model.Description</p>

                    <p class="text-muted mt-2">Available On:</p>
                    <div style="display: flex; flex-wrap: wrap; gap: 8px; padding-top: 1px;">
                        @foreach (var StreamLogo in Model.StreamingLogos)
                        {
                            <img src="@Url.Content($"~/assets/images/Logos/{StreamLogo}.png")"
                                 alt="@StreamLogo"
                                 class="stream-logo me-2 fs-4" />
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <img alt="@Model.Title" class="w-100" src="@Url.Content($"~/assets/images/Movies/{Model.Cover}")" />
            </div>
        </div>
    </div>
</div>

@if (User.IsInRole("Admin"))
{
    <div>
        <a class="btn btn-outline-info rounded rounded-3 me-2" asp-action="Edit" asp-route-id="@Model.Id">
            <i class="bi bi-pencil-fill">Edit Movie</i>
        </a>
    </div>
}

<!-- JavaScript for Hover & Click Rating -->
<script>
    const stars = document.querySelectorAll("#rating-stars i");
    const form = document.getElementById("ratingForm");
    const input = document.getElementById("ratingInput");

    stars.forEach((star, i) => {
        star.addEventListener("mouseover", () => {
            highlightStars(i + 1);
        });

        star.addEventListener("mouseleave", () => {
            highlightStars(0);
        });

        star.addEventListener("click", () => {
            input.value = star.getAttribute("data-value");
            form.submit();
        });
    });

    function highlightStars(count) {
        stars.forEach((star, i) => {
            star.className = i < count ? "bi bi-star-fill" : "bi bi-star";
        });
    }
</script>

<style>
    .stream-logo {
        width: 45px;
        height: 40px;
        border-radius: 8px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .neon-hover {
        transition: box-shadow 0.5s ease, color 0.5s ease;
    }

        .neon-hover:hover {
            box-shadow: 0 0 10px 3px #0d6efd, 0 0 18px 4px #0d6efd;
            color: #0d6efd;
        }

    .stream-logo:hover {
        transform: scale(1);
        box-shadow: 0 0 12px rgba(200, 255, 255, 0.9);
    }
</style>
