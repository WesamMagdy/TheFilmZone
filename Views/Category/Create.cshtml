@model FilmZone.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Create";
}
@if (Model.CategoryId == 0)
{
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <div>
            <h2 class="fw-semibold text-secondary-emphasis mb-1">
                ➕ Add New Category
            </h2>
            <p class="text-muted mb-0">Create a new movie category by entering its name below.</p>
        </div>
    </div>
    <hr />
}
else
{
    <div>
        <h2 class="fw-semibold text-secondary-emphasis mb-1 mt-3">
            ✏️ Edit Category
        </h2>
        <p class="text-muted mb-0">Update the selected movie category by changing its name below.</p>
    </div>
    <hr />
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
           
            <div class="form-group">
                <input asp-for="@Model.CategoryId" type="hidden" />
                <label asp-for="CategoryName" class="control-label">Category Name</label>
                <input asp-for="CategoryName" class="form-control" placeholder="Enter Category Name" />
                <span asp-validation-for="CategoryName" class="text-danger mt-5"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success mt-3" />
            </div>
        </form>
    </div>
</div>

