@model IEnumerable<FilmZone.ViewModels.CategoryIndexViewModel>

@{
    ViewData["Title"] = "Manage";
}

<div class="bg-body-tertiary rounded-4 shadow-sm p-4 mb-4 border border-1 border-secondary-subtle">
	<div class="d-flex align-items-center gap-3">
		<div class="bg-secondary-subtle text-secondary rounded-circle p-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
			<i class="bi bi-collection-play-fill fs-4"></i>
		</div>
		<div>
			<h2 class="mb-1 fw-semibold text-dark-emphasis">Manage Categories</h2>
			<p class="mb-0 text-muted">Add, edit, or remove categories for your movie collection</p>
		</div>
	</div>
</div>

<table class="table table-hover">

<table class="table table-hover">


	<tbody>
		@foreach (var category in Model)
		{
			<tr class=" table-active border-3 border-dark-subtle">
				<td>
					<div class="d-flex ">
						<div class="d-flex flex-column justify-content-center">
							<h4 class="text-dark">@category.CategoryName</h4>
							<h5 class="">Movies: @category.MoviesCount</h5>
						</div>
					</div>
				</td>
				<td class="align-middle">
					<div class="d-flex justify-content-end">
						<a class="btn btn-outline-info rounded rounded-3 me-2" asp-action="Edit" asp-route-id="@category.CategoryId">
							<i class="bi bi-pencil-fill"></i>
						</a>
						<form asp-action="Delete" asp-route-id="@category.CategoryId" method="post"
							  onsubmit="return confirm('Are you sure you want to delete this movie?');"
							  style="display:inline;">
							<button type="submit" class="btn btn-outline-danger rounded rounded-3 me-2">
								<i class="bi bi-trash3"></i>
							</button>
						</form>

					</div>
				</td>
			</tr>

		}
	</tbody>

</table>
<a asp-action="Create" class="btn btn-outline-primary text-light">Add New Category</a>
