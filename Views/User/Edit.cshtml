@model FilmZone.ViewModels.Identitiy.UserViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mb-4">
    <h2 class="fw-semibold text-secondary-emphasis mt-3 mb-1">
        🛠 Edit Account
        <span class="mt-3">
            <i class="bi bi-arrow-right"></i> @Model.Fname @Model.Lname
        </span>
    </h2>
    <p class="text-muted mb-0">
        Modify the user’s details or roles as needed. Double-check before saving!
    </p>
</div>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Fname" class="form-label"></label>
                <input asp-for="Fname" class="form-control" />
                <span asp-validation-for="Fname" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Lname" class="form-label"></label>
                <input asp-for="Lname" class="form-control" />
                <span asp-validation-for="Lname" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Email" />
         

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

